{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDir": "."
  },
  "include": ["src/**/*.ts", "backend/**/*.ts", "frontend/**/*.ts", "frontend/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
